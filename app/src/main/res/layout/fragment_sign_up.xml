            <EditText
                android:id="@+id/signup_phone_no"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="10dp"
                android:autofillHints="09"
                android:background="@drawable/textedit_shape"
                android:drawableStart="@drawable/phone_vector"
                android:drawablePadding="8dp"
                android:fontFamily="@font/rafat"
                android:hint="@string/phone"
                android:inputType="phone"
                android:padding="10dp"
                android:textAlignment="viewStart" />

            <TextView
                android:id="@+id/signup_phone_no_error"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:drawablePadding="5dp"
                android:fontFamily="@font/rafat"
                android:gravity="start"
                android:text="error"
                android:textColor="@color/holo_red_dark"
                android:textSize="16sp"
                android:textStyle="bold"
                android:visibility="gone"
                app:drawableStartCompat="@drawable/error_outline_24"
                app:drawableTint="@color/holo_red_dark" />

            <EditText
                android:id="@+id/signup_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="10dp"
                android:autofillHints=""
                android:background="@drawable/textedit_shape"
                android:drawableStart="@drawable/lock_vector"
                android:drawablePadding="10dp"
                android:fontFamily="@font/rafat"
                android:hint="@string/prompt_password"
                android:inputType="textPassword"
                android:padding="10dp"
                android:textAlignment="viewStart" />

            <TextView
                android:id="@+id/signup_password_error"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:drawablePadding="5dp"
                android:fontFamily="@font/rafat"
