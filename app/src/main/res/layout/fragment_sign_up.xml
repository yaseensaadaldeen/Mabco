<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context=".ui.Signin.SignUpFragment">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="40dp"
            android:padding="20dp">

            <LinearLayout
                android:id="@+id/SignUpLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:visibility="visible">

                <TextView
                    android:id="@+id/header_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginEnd="30dp"
                    android:layout_marginBottom="50dp"
                    android:fontFamily="@font/rafat"
                    android:lines="1"
                    android:text="@string/signupheader"
                    android:textAlignment="center"
                    android:textColor="@color/colorPrimary"
                    android:textSize="25sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/message"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:drawablePadding="5dp"
                    android:fontFamily="@font/rafat"
                    android:gravity="start"
                    android:text="error"
                    android:textColor="@color/holo_red_dark"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:visibility="gone"
                    app:drawableStartCompat="@drawable/error_outline_24"
                    app:drawableTint="@color/holo_red_dark" />

                <EditText
                    android:id="@+id/signup_user_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:autofillHints=""
                    android:maxLength="50"
                    android:background="@drawable/textedit_shape"
                    android:drawableStart="@drawable/person_vector"
                    android:fontFamily="@font/rafat"
                    android:hint="@string/user_name"
                    android:inputType="textPersonName"
                    android:padding="10dp"
                    android:textAlignment="viewStart" />

                <TextView
                    android:id="@+id/signup_user_name_error"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:drawablePadding="5dp"
                    android:fontFamily="@font/rafat"
                    android:gravity="start"
                    android:text="error"
                    android:textColor="@color/holo_red_dark"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:visibility="gone"
                    app:drawableStartCompat="@drawable/error_outline_24"
                    app:drawableTint="@color/holo_red_dark" />


                <EditText
                    android:id="@+id/signup_phone_no"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="10dp"
                    android:autofillHints="09"
                    android:maxLength="10"
                    android:background="@drawable/textedit_shape"
                    android:drawableStart="@drawable/phone_vector"
                    android:drawablePadding="8dp"
                    android:fontFamily="@font/rafat"
                    android:hint="@string/phone"
                    android:inputType="phone"
                    android:padding="10dp"
                    android:textAlignment="viewStart" />

                <TextView
                    android:id="@+id/signup_phone_no_error"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:drawablePadding="5dp"
                    android:fontFamily="@font/rafat"
                    android:gravity="start"
                    android:text="error"
                    android:textColor="@color/holo_red_dark"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:visibility="gone"
                    app:drawableStartCompat="@drawable/error_outline_24"
                    app:drawableTint="@color/holo_red_dark" />

                <EditText
                    android:id="@+id/signup_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="10dp"
                    android:maxLength="10"
                    android:autofillHints=""
                    android:background="@drawable/textedit_shape"
                    android:drawableStart="@drawable/lock_vector"
                    android:drawablePadding="10dp"
                    android:fontFamily="@font/rafat"
                    android:hint="@string/prompt_password"
                    android:inputType="textPassword"
                    android:padding="10dp"
                    android:textAlignment="viewStart" />

                <TextView
                    android:id="@+id/signup_password_error"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:drawablePadding="5dp"
                    android:fontFamily="@font/rafat"
                    android:gravity="start"
                    android:text="error"
                    android:textColor="@color/holo_red_dark"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:visibility="gone"
                    app:drawableStartCompat="@drawable/error_outline_24"
                    app:drawableTint="@color/holo_red_dark" />

                <EditText
                    android:id="@+id/signup_confirm"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="10dp"
                    android:maxLength="10"
                    android:autofillHints=""
                    android:background="@drawable/textedit_shape"
                    android:drawableStart="@drawable/lock_vector"
                    android:drawablePadding="8dp"
                    android:fontFamily="@font/rafat"
                    android:gravity="start"
                    android:hint="@string/confirm_password"
                    android:inputType="textPassword"
                    android:padding="10dp"
                    android:textAlignment="viewStart" />

                <TextView
                    android:id="@+id/signup_confirm_error"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:drawablePadding="5dp"
                    android:fontFamily="@font/rafat"
                    android:gravity="start"
                    android:text="error"
                    android:textColor="@color/holo_red_dark"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:visibility="gone"
                    app:drawableStartCompat="@drawable/error_outline_24"
                    app:drawableTint="@color/holo_red_dark" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_marginTop="15dp"
                    android:fontFamily="@font/rafat"
                    android:text="@string/verify_phone"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

                <Button
                    android:id="@+id/btn_next"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="100dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginEnd="100dp"
                    android:layout_marginBottom="500dp"
                    android:fontFamily="@font/rafat"
                    android:text="@string/next"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:cornerRadius="13dp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/signup_phone_verification"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="20dp"
                android:visibility="gone">

                <TextView
                    android:id="@+id/Ver_header_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="10dp"
                    android:fontFamily="@font/rafat"
                    android:text="@string/last_step"
                    android:textAlignment="viewStart"
                    android:textColor="@color/colorPrimary"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/EdTxt_verification_Code"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="10dp"
                    android:autofillHints=""
                    android:background="@drawable/textedit_shape"
                    android:drawableStart="@drawable/numbers_vector"
                    android:drawablePadding="8dp"
                    android:fontFamily="@font/rafat"
                    android:gravity="start"
                    android:hint="@string/verification_code"
                    android:inputType="textPassword"
                    android:padding="10dp"
                    android:textAlignment="viewStart" />

                <TextView
                    android:id="@+id/signup_verification_Code_error"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:drawablePadding="5dp"
                    android:fontFamily="@font/rafat"
                    android:gravity="start"
                    android:text="error"
                    android:textColor="@color/holo_red_dark"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:visibility="gone"
                    app:drawableStartCompat="@drawable/error_outline_24"
                    app:drawableTint="@color/holo_red_dark" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:fontFamily="@font/rafat"
                    android:text="@string/verify_phone_next"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/txt_Timer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="63dp"
                    android:layout_marginBottom="63dp"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textSize="40sp" />

                <TextView
                    android:id="@+id/txt_resend_code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/rafat"
                    android:text="@string/Verification_resend"
                    android:textColor="@color/colorPrimaryDarkNoAlpha" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="500dp"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btn_back"
                        android:layout_width="wrap_content"
                        android:layout_height="60dp"
                        android:layout_gravity="center"
                        android:layout_margin="10dp"
                        android:fontFamily="@font/rafat"
                        android:text="@string/back"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        app:cornerRadius="13dp" />

                    <Button
                        android:id="@+id/signup_button"
                        android:layout_width="wrap_content"
                        android:layout_height="60dp"
                        android:layout_gravity="center"
                        android:layout_margin="10dp"
                        android:layout_marginTop="30dp"
                        android:layout_marginBottom="50dp"
                        android:fontFamily="@font/rafat"

                        android:text="@string/signup"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        app:cornerRadius="13dp" />


                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
        </ScrollView>

</LinearLayout>


