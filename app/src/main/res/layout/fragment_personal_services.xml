<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/personal_services"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="ltr"
    android:orientation="vertical"
    tools:context="ui.Services.PersonalServicesFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/disc_pro_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="20dp"
            android:fontFamily="@font/rafat"
            android:text="الخدمات الشخصية"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:textStyle="bold" />

        <View
            android:id="@+id/sep_hdr"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_below="@+id/disc_pro_header"
            android:background="#000" />

        <ScrollView
            style="@style/scrollbar_style"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/sep_hdr"
            android:layout_marginBottom="60dp"
            android:background="#e5e5e5">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:src="@drawable/xxhdp" />
        </ScrollView>

    </RelativeLayout>

</LinearLayout>
